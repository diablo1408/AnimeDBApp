<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RLRAnime"
        android:orientation="vertical"




        tools:context="com.example.animedbapp.MainActivity"
>
    <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="190dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"



            android:id="@+id/CvRImage"


    >

        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/ivRPics"
        />


    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="140dp"
              android:layout_height="wrap_content"
              tools:text="Title"
              android:layout_below="@+id/CvRImage"
              android:textSize="16sp"
              android:layout_marginLeft="4dp"
              android:id="@+id/titleRTv"
              android:textColor="#FFFFFF"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Score"
              android:layout_below="@id/titleRTv"
              android:textColor="#FFFFFF"
              android:id="@+id/scoretextR"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="9dp"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginBottom="8dp"/>
    <Button android:layout_width="52dp"
            android:layout_height="19dp"
            android:id="@+id/btnRScore"
            android:background="@drawable/score_buttonshape"
            tools:text="8.9"
            android:layout_below="@id/titleRTv"
            android:layout_toRightOf="@id/scoretextR"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/btnRScore"
              android:layout_below="@id/titleRTv"
              tools:text="Status"
              android:textSize="10sp"
              android:textColor="#FFFFFF"
              android:layout_marginLeft="6dp"
              android:id="@+id/epRTv"

              android:layout_marginTop="11dp"/>


</RelativeLayout>
