<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardMaxElevation="8dp"
        app:cardCornerRadius="6dp"
        android:layout_margin="5dp"
        android:id="@+id/CvsearchRes"
>

     <LinearLayout

             android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
      >

         <ImageView android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:id="@+id/animeimageSW"
                    android:layout_marginStart="8dp"
         />


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="22dp"
        >
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      tools:text="Title"
                      android:textAlignment="center"
                      android:textSize="16sp"
                      android:id="@+id/titleSWTv"
                      android:textStyle="bold"
                      android:textAllCaps="true"
                      android:textFontWeight="5"
                      android:textColor="#000000"


            />



            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="8dp"


            >
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_star_yellow_500_24dp"
                           android:layout_marginLeft="32dp"
                           android:layout_marginTop="6dp"
                />
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center"
                              android:layout_marginLeft="16dp"

                >
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Score"
                              android:textSize="10sp"

                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              tools:text="9.53"
                              android:textStyle="bold"
                              android:textColor="#000000"
                              android:id="@+id/ScoreSWTv"
                    />
                </LinearLayout>


            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="English Title"
                      android:textSize="8sp"
                      android:layout_marginLeft="32dp"
                      android:textStyle="bold"
                      android:textColor="#000000"
                      android:layout_marginTop="8dp"
                      android:id="@+id/eTitletext"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      tools:text="English Title"
                      android:textSize="16sp"
                      android:layout_marginLeft="32dp"
                      android:textStyle="bold"
                      android:id="@+id/englishTitleSWTv"

            />
            <Button
                    android:id="@+id/btnRemoveList"

                    android:text="Remove"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:layout_marginTop="16dp"

                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@drawable/addbuttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_gravity="center"


            />


        </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>