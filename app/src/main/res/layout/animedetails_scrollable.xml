<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_anime_details"
        android:id="@+id/scrollableView"
>

    <LinearLayout
            android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@drawable/background_gradient"

    >


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="4dp"
    >

        <ImageView android:layout_width="160dp"
                   android:layout_height="275dp"
                   android:id="@+id/animeimage"
                   android:layout_marginStart="8dp"
        />


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="22dp"
        >


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="8dp"


            >
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_star_yellow_500_24dp"
                           android:layout_marginLeft="32dp"
                           android:layout_marginTop="6dp"
                />
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center"
                              android:layout_marginLeft="16dp"

                >
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Score"
                              android:textSize="10sp"

                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              tools:text="9.53"
                              android:textStyle="bold"
                              android:textColor="#FFFFFF"
                              android:id="@+id/ScoreTv"
                    />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="8dp">


                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_trending_up_grey_900_24dp"
                           android:layout_marginLeft="32dp"
                           android:layout_marginTop="6dp"
                />
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center"
                              android:layout_marginLeft="16dp"

                >
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Rank"
                              android:textSize="10sp"

                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              tools:text="#81"
                              android:textStyle="bold"
                              android:textColor="#FFFFFF"
                              android:id="@+id/rankTv"
                    />
                </LinearLayout>


            </LinearLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="English Title"
                      android:textSize="8sp"
                      android:layout_marginLeft="32dp"
                      android:textStyle="bold"
                      android:textColor="#000000"
                      android:layout_marginTop="8dp"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      tools:text="English Title"
                      android:textSize="16sp"
                      android:layout_marginLeft="32dp"
                      android:textStyle="bold"
                      android:id="@+id/englishTitleTv"
                      android:textColor="#FFFFFF"

            />
            <ImageButton
                    android:id="@+id/btnAddList"
                    android:text="Add to List"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:layout_marginTop="16dp"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:background="@drawable/addbuttonshape"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_playlist_add_white_24dp"

            />


        </LinearLayout>


    </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:text="Title"
                  android:textSize="20sp"
                  android:gravity="center"
                  android:id="@+id/animeTitleTv"
                  android:textColor="#FFFFFF"
                  android:textAllCaps="true"
                  android:layout_marginTop="8dp"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >


            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      tools:text="TV"
                      android:layout_weight="0.5"
                      android:textStyle="bold"
                      android:id="@+id/typeTv"
                      android:textAlignment="center"

            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      tools:text="2011"
                      android:layout_weight="0.5"
                      android:textStyle="bold"
                      android:id="@+id/yearTv"
                      android:textAlignment="center"


            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      tools:text="STATUS"
                      android:layout_weight="1.5"
                      android:textStyle="bold"
                      android:id="@+id/statusTv"
                      android:textAlignment="center"
            />
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      tools:text="EP"
                      android:layout_weight="1"
                      android:textStyle="bold"
                      android:id="@+id/epTv"
                      android:textAlignment="center"

            />


        </LinearLayout>


        <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="5dp"
                app:cardPreventCornerOverlap="true"
                android:layout_margin="8dp"

        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical"
                          android:background="@drawable/background_cardview_gradient"

            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Information"
                          android:textAllCaps="true"
                          android:textStyle="bold"
                          android:textColor="#FFFFFF"
                          android:layout_marginLeft="4dp"
                          android:layout_marginTop="4dp"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="8dp"
                >
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="Episodes"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:layout_marginLeft="4dp"


                    />
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              tools:text="100"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:gravity="right"
                              android:id="@+id/epInTv"
                              android:layout_marginLeft="4dp"

                    />


                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="1.5dp"
                      android:layout_marginTop="2dp"
                      android:background="#bdc3c7"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="8dp"
                >
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="Source"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:layout_marginLeft="4dp"

                    />
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              tools:text="Manga"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:gravity="right"
                              android:id="@+id/sourceTv"
                              android:layout_marginLeft="4dp"


                    />


                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="1.5dp"
                      android:background="#bdc3c7"
                      android:layout_marginTop="2dp"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="8dp"
                >
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="Studio"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:layout_marginLeft="4dp"

                    />
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              tools:text="Toei Animation"
                              android:textColor="#FFFFFF"
                              android:gravity="right"
                              android:layout_weight="1"
                              android:id="@+id/studioTv"
                              android:layout_marginLeft="4dp"

                    />


                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="1.5dp"
                      android:background="#bdc3c7"
                      android:layout_marginTop="2dp"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="8dp"

                >
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="Rating"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:layout_marginLeft="4dp"


                    />
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              tools:text="sdfdsfsdf"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:gravity="right"
                              android:id="@+id/ratingTv"
                              android:layout_marginLeft="4dp"

                    />


                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="1.5dp"
                      android:background="#bdc3c7"
                      android:layout_marginTop="2dp"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="8dp"
                >
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="Status"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:layout_marginLeft="4dp"

                    />
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              tools:text="Airing"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:gravity="right"
                              android:id="@+id/statusInTv"
                              android:layout_marginLeft="4dp"

                    />


                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="1.5dp"
                      android:background="#bdc3c7"
                      android:layout_marginTop="2dp"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="8dp"
                >
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="Duration"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:layout_marginLeft="4dp"

                    />
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              tools:text="sdfdsfsdf"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:gravity="right"
                              android:id="@+id/durationTv"
                              android:layout_marginLeft="4dp"

                    />


                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="1.5dp"
                      android:background="#bdc3c7"
                      android:layout_marginTop="2dp"
                />


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="8dp"
                              android:layout_marginBottom="4dp"
                >
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="Aired"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"

                    />
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              tools:text="Oct 20,1999"
                              android:textColor="#FFFFFF"
                              android:layout_weight="1"
                              android:gravity="center"
                              android:id="@+id/airedTv"
                              android:layout_marginLeft="4dp"

                    />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <include layout="@layout/layout_info"/>




    </LinearLayout>

</ScrollView>
